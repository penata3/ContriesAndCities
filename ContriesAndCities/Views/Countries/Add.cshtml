@model CountryInputModel

<form method="post">
    <div class="row">
        <div class="col-md-12">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />  
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add</button>
</form>