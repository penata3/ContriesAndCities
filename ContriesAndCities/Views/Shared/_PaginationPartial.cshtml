    <ul class="pagination justify-content-center">

        <li class="page-item @if (Model.FirstPage == Model.PageNumber) { <text>disabled</text> }">
            <a class="page-link" asp-for="@Model.ActionName" asp-route-id="@Model.FirstPage">&laquo;&laquo;</a>
        </li>

        <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="@Model.ActionName" asp-route-id="@Model.PreviousPageNumber">&laquo;</a>
        </li>
        @for (int i = Model.PageNumber - 2; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="@Model.ActionName" asp-route-id="@i">@i</a></li>
            }
        }

        <li class="page-item">
            <a class="page-link" asp-for="@Model.ActionName" asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
        </li>

        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 4; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-action="@Model.ActionName" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-for="@Model.ActionName" asp-route-id="@Model.NextPageNumber">&raquo;</a>
        </li>

        <li class="page-item @if (Model.PageNumber == Model.PagesCount || Model.ItemsCount < 1) { <text>disabled</text> }">
            <a class="page-link" asp-for="@Model.ActionName" asp-route-id="@Model.PagesCount">&raquo;&raquo;</a>
        </li>
    </ul>
</nav>